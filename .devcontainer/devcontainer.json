// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/git-lfs:1": {
			"autoPull": true,
			"installDirectlyFromGitHubRelease": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {
			"installDirectlyFromGitHubRelease": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/powershell:2": {
			"version": "7.4"
		},
		"ghcr.io/rocker-org/devcontainer-features/rstudio-server:0": {
			"allowReinstall": true,
			"singleUser": true,
			"version": "stable"
		},
		"ghcr.io/stuartleeks/dev-container-features/add-host:1": {},
		"ghcr.io/jsburckhardt/devcontainer-features/codex:1": {},
		"ghcr.io/christophermacgown/devcontainer-features/direnv:1": {
			"autoEnable": true,
			"architecture": "amd64",
			"version": "latest"
		},
		"ghcr.io/kvokka/features/codegpt:1": {
			"version": "latest"
		},
		"ghcr.io/michidk/devcontainers-features/bun:1": {},
		"ghcr.io/devcontainers-community/npm-features/typescript:1": {
			"version": "latest"
		},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-docker-outside-of-docker:0": {
			"installDockerCompose": true
		},
		"ghcr.io/ait-assistive-autonomous-systems/devcontainer_features/add-groups:0": {
			"addGroups": "4(adm),24(cdrom),27(sudo),30(dip),46(plugdev),116(lpadmin),999(docker)",
			"excludeGroups": "file://.devcontainer/exclude_host_groups"
		},
		"ghcr.io/devcontainers-extra/features/actions-runner:1": {
			"version": "latest",
			"dotnetVersion": "latest"
		},
		"ghcr.io/devcontainers-extra/features/gh-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/gh-release:1": {
			"repo": "digitalocean/doctl",
			"binaryNames": "gh",
			"version": "latest",
			"binLocation": "/usr/local/bin",
			"libLocation": "/usr/local/lib",
			"additionalFlags": "--no-filter-assets-by-platform"
		},
		"ghcr.io/devcontainers-extra/features/live-server:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/node-asdf:0": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/prisma:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/ts-node:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/tsx:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/typescript:2": {
			"version": "latest"
		},
		"ghcr.io/davzucky/devcontainers-features-wolfi/node:1": {
			"installNpm": true,
			"installYarn": true,
			"installPnpm": true,
			"nodeVersion": "20"
		},
		"ghcr.io/forwardsoftware/devcontainer-features/go-mod-cache:1": {},
		"ghcr.io/devcontainer-community/devcontainer-features/opencode.ai:1": {
			"version": "latest"
		},
		"ghcr.io/roul/devcontainer-features/mise-java:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"VisualStudioExptTeam.intellicode-api-usage-examples"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
