# Environment Configuration
# Copy this file to .env and fill in your values

# === Puter Configuration ===
PUTER_DOMAIN=localhost
PUTER_PROTOCOL=http
PUTER_JWT_SECRET=your-super-secure-jwt-secret-change-this
PUTER_COOKIE_SECRET=your-cookie-secret-change-this

# === Database Configuration ===
DB_USER=grudge
DB_PASSWORD=your-secure-database-password
DB_HOST=database
DB_PORT=5432
DB_NAME=grudge_studio

# === Redis Configuration ===
REDIS_PASSWORD=your-redis-password

# === Monitoring Configuration ===
GRAFANA_PASSWORD=admin

# === Production Settings ===
NODE_ENV=production
PORT=4100

# === SSL Configuration (Optional) ===
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# === CDN Configuration (Optional) ===
# CDN_URL=https://cdn.yourdomain.com
# ASSETS_BASE_URL=https://assets.yourdomain.com

# === Analytics Configuration (Optional) ===
# ANALYTICS_ENDPOINT=https://analytics.yourdomain.com/api/metrics
# ANALYTICS_API_KEY=your-analytics-api-key

# === Security Settings ===
DISABLE_TEMP_USERS=false
DISABLE_USER_SIGNUP=false
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_2FA=true

# === File Upload Limits ===
MAX_FILE_SIZE=100000000
MAX_UPLOAD_SIZE=500000000

# === Performance Settings ===
MEMORY_LIMIT=2048
CPU_LIMIT=2

# === Backup Configuration ===
# BACKUP_S3_BUCKET=grudge-studio-backups
# BACKUP_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret